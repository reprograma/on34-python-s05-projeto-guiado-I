def consultar_faltas_aluna():

    print("Inserir os seguintes dados: ")
    nome = input("Nome da aluna: ")
    sobrenome = input("Sobrenome da aluna: ")
    qtd_faltas = dataset[(nome, sobrenome)]["Presença"].count(False)
    if qtd_faltas > 2:
     print ("Reprovada")
    else:
     print ("Aprovada")

